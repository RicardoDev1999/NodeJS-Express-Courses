{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "./src/app.js",
  "type": "module",
  "scripts": {
    "start": "node ./src/app.js",
    "dev": "nodemon -e js,ejs --ignore public ./src/app.js",
    "lint": "eslint \"src/**/*.js\"",
    "format": "eslint \"src/**/*.js\" --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run format",
      "git add"
    ]
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "Ricardo Duarte",
  "license": "MIT",
  "dependencies": {
    "connect-livereload": "^0.6.1",
    "cors": "^2.8.5",
    "ejs": "^3.1.6",
    "ejs-lint": "^1.2.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "^4.17.3",
    "joi": "^17.6.0",
    "livereload": "^0.9.3",
    "mongoose": "^6.2.7",
    "morgan": "^1.10.0",
    "sucrase": "^3.20.3"
  },
  "devDependencies": {
    "eslint": "^8.11.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.0"
  },
  "engines": {
    "node": ">=16.14.2",
    "npm": ">=8.5.0"
  }
}
